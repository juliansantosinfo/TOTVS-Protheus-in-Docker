{
  "project_name": "TOTVS-Protheus-in-Docker",
  "project_description": "A Docker-based environment for running the TOTVS Protheus ERP for development and testing. It uses a microservices architecture orchestrated by Docker Compose.",
  "commands": {
    "run": {
      "description": "Start the environment. Choose one of the following based on the desired database.",
      "postgresql": "docker compose -f docker-compose-postgresql.yaml -p totvs up -d",
      "mssql": "docker compose -f docker-compose-mssql.yaml -p totvs up -d"
    },
    "run_full": {
      "description": "Start the full environment, including the REST API service. Choose one.",
      "postgresql": "docker compose -f docker-compose-postgresql.yaml --profile full -p totvs up -d",
      "mssql": "docker compose -f docker-compose-mssql.yaml --profile full -p totvs up -d"
    },
    "stop": {
      "description": "Stop the environment.",
      "command": "docker compose -p totvs down"
    },
    "build": {
      "description": "Build all Docker images for the project.",
      "command": "bash scripts/build.sh"
    },
    "build_specific": {
      "description": "Build specific Docker image(s). Example: build_specific appserver dbaccess",
      "command": "bash scripts/build.sh <app_name>..."
    },
    "clean": {
      "description": "Clean up Docker resources (containers, volumes, networks) associated with the project.",
      "command": "bash scripts/clean.sh"
    }
  },
  "files": {
    "main_readme": "/mnt/sda1/share/Documentos/Docker/TOTVS-Protheus-in-Docker/README.md",
    "docker_compose_postgres": "/mnt/sda1/share/Documentos/Docker/TOTVS-Protheus-in-Docker/docker-compose-postgresql.yaml",
    "docker_compose_mssql": "/mnt/sda1/share/Documentos/Docker/TOTVS-Protheus-in-Docker/docker-compose-mssql.yaml",
    "env_example": "/mnt/sda1/share/Documentos/Docker/TOTVS-Protheus-in-Docker/.env.example"
  },
  "theme": "Default"
}
